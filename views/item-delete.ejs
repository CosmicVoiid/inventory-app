<!DOCTYPE html>
<html lang="en">
	<%- include("./partials/head.ejs")%>
	<body>
		<%- include("./partials/nav.ejs")%>

		<h1 class="main-header"><%= item.name %></h1>
		<h3 class="item-detail item-detail-category"><%= category%></h3>
		<p class="item-detail item-detail-description"><%= item.description%></p>
		<p class="item-detail item-detail-price">Price: <%= item.price%></p>
		<p class="item-detail item-detail-stock">In Stock:<%= item.in_stock %></p>

		<h3 class="item-delete-form">Do you really want to delete this item?</h3>

		<form class="item-delete-form" action="" method="POST">
			<input
				class="form-control"
				type="hidden"
				value="<%= item._id %>"
				required="true"
				name="itemId"
			/>

			<button class="btn btn-delete" type="submit">Delete</button>
		</form>
	</body>
</html>
